@model IEnumerable<ArtShop.Data.Model.Product>
@{
    ViewBag.Title = "Pinturas";
}

<div class="contentPage">
    <aside>
        POSIBLES FILTROS
    </aside>
    <section class="sectionRight">
        <h1 class="centerText">Pinturas disponibles</h1>
        <div class="cardHome">
            
            @foreach (var item in Model)
            {
                <div class="cardProp colProp-lg-4">
                    <img src="~/Content/Images/pinturaPrueba.png" alt="Pintura de Prueba">
                    <span class="spanPrice">$@item.Price</span>
                    <div class="cardContainer">
                        <h4><b>@item.Title</b> </h4>
                        <p>ID Artista: @item.ArtistID (Provisorio)</p>
                        <a href=@Url.Action("itemProduct","Product",@item)><span class="icon-plus">Ver<i class="medium material-icons" style="position: relative;top: 6px;">add_box</i></span></a>
                    </div>
                </div>
            }   

           
        </div>
    </section>
</div>